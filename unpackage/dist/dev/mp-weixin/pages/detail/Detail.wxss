.comment {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  padding: 30rpx;
}
.comment .left image {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  background-color: #f2f2f2;
}
.comment .right {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
  padding-left: 20rpx;
  font-size: 30rpx;
}
.comment .right .top {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  margin-bottom: 10rpx;
}
.comment .right .top .name {
  color: #18B566;
}
.comment .right .top .like {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  color: #9a9a9a;
  font-size: 26rpx;
}
.comment .right .top .like .num {
  margin-right: 4rpx;
  color: #9a9a9a;
}
.comment .right .top .highlight {
  color: #71d5a1;
}
.comment .right .top .highlight .num {
  color: #71d5a1;
}
.comment .right .content {
  margin-bottom: 10rpx;
}
.comment .right .reply-box {
  background-color: #f2f2f2;
  border-radius: 12rpx;
}
.comment .right .reply-box .item {
  padding: 20rpx;
  border-bottom: solid 2rpx #e4e7ed;
}
.comment .right .reply-box .item .username {
  font-size: 24rpx;
  color: #999999;
}
.comment .right .reply-box .all-reply {
  padding: 20rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  color: #71d5a1;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.comment .right .reply-box .all-reply .more {
  margin-left: 6rpx;
}
.comment .right .bottom {
  margin-top: 20rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  font-size: 24rpx;
  color: #9a9a9a;
}
.comment .right .bottom .reply {
  color: #71d5a1;
  margin-left: 10rpx;
